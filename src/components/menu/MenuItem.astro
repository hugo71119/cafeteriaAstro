---
import type { FeaturedImages } from '@/types'
interface Props {
    title: string
    description: string
    price: number
    image: FeaturedImages
}

const { title, description, price, image } = Astro.props

---

<li class="flex flex-col md:flex-row lg:justify-between gap-5 w-full md:items-center p-5  ">
  <div class="flex-1 flex flex-col md:flex-row gap-5 items-center ">
    <div class="w-full md:w-40 lg:w-56 overflow-hidden">
        <img 
            src={image.medium.url} 
            alt={`Imagen del Menu: ${title}`}
            width={image.medium.width}
            height={image.medium.height}
            class="w-full h-64 md:h-40 object-cover border-8 border-white"
        />
    </div>
    <div class="flex-1">
      <p class="text-white font-bold text-2xl text-center md:text-left">{title}</p>
      <p class="text-coffe-400 text-lg  text-center md:text-left">{description}</p>
    </div>
  </div>
  <p class="text-4xl font-black text-white text-center md:text-left">${price}</p>
</li>