---
interface Props {
    icon: string
    text: string
}

const {icon, text} = Astro.props;

---


<div class="py-10 space-y-5 flex flex-col items-center">
    <img  
        src={icon}
        alt={`Icon`}
        class="max-w-72"
    />
    <h3 class="text-4xl text-coffe-800 font-mono">
        {text}
    </h3>
</div>